[MESSAGES CONTROL]
disable=
    duplicate-code,
    missing-class-docstring,
    missing-function-docstring,
    missing-module-docstring,
    no-else-break,
    no-else-return,
    unbalanced-tuple-unpacking,
    unspecified-encoding,
    useless-else-on-loop


[DESIGN]
max-args=10
max-attributes=15
max-locals=20

[FORMAT]
max-line-length=100

[MISCELLANEOUS]
# don't list TODOs
notes=FIXME
